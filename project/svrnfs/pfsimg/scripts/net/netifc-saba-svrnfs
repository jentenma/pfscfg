	    mgt=`cat /etc/hosts | grep $hostname-mgt | awk '{print $1}'`
	    fab0=`cat /etc/hosts | grep $hostname-fab0 | awk '{print $1}'`
	    fab1=`cat /etc/hosts | grep $hostname-fab1 | awk '{print $1}'`
	    cat /etc/network/interfaces | sed -e "s/INSERT_MGT_IP_ADDRESS/$mgt/g; \
                                                  s/INSERT_GATEWAY_IP_ADDRESS/$gateway/g; \
                                                  s/INSERT_FAB0_IP_ADDRESS/$fab0/g; \
                                                  s/INSERT_FAB1_IP_ADDRESS/$fab1/g" > /tmp/interfaces; \
                                                  cp /tmp/interfaces /etc/network/interfaces;rm /tmp/interfaces
