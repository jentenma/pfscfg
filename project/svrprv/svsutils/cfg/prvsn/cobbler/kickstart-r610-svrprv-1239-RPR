# kickstart template for Fedora 8 and later.
# (includes %end blocks)
# do not use with earlier distros

#platform=x86, AMD64, or Intel EM64T
# System authorization information
auth  --useshadow  --enablemd5
# System bootloader configuration
bootloader --location=mbr
# Partition clearing information
clearpart --all --initlabel
# Use text mode install
text
# Firewall configuration
firewall --enabled
# Run the Setup Agent on first boot
firstboot --disable
# System keyboard
keyboard us
# System language
lang en_US
# Use network installation
url --url=$tree
# If any cobbler repo definitions were referenced in the kickstart profile, include them here.
$yum_repo_stanza
# Network information
$SNIPPET('network_config')
# Reboot after installation
reboot

#Root password
rootpw --iscrypted $default_password_crypted
# SELinux configuration
selinux --disabled
# Do not configure the X Window System
skipx
# System timezone
timezone  America/New_York
# Install OS instead of upgrade
install
# Clear the Master Boot Record
zerombr
# Allow anaconda to partition the system as needed
autopart

%pre
$SNIPPET('log_ks_pre')
$SNIPPET('kickstart_start')
$SNIPPET('pre_install_network_config')
# Enable installation monitoring
$SNIPPET('pre_anamon')
%end

%packages
$SNIPPET('func_install_if_enabled')
OpenIPMI
pciutils
ipmitool
nfs-utils
net-tools
lsof
iperf3
autoconf
automake
binutils
bison
flex
gcc
gcc-c++
gettext
libtool
make
patch
pkgconfig
redhat-rpm-config
rpm-build
rpm-sign
wget
git
emacs
ypbind
telnet
tftp
tftp-server
xinetd
syslinux
vsftpd
OpenIPMI
lm_sensors
dialog
dhcp
libffi-devel
libxml2-devel.x86_64
python-devel
openssl-devel
bind
httpd
ksh
ntp
openssl098e
screen
spax
qt
qt3
nmap
pyOpenSSL
perl-Crypt-SSLeay
perl-DB_File
perl-Digest-HMAC
perl-Digest-SHA1
perl-XML-Simple
perl-XML-LibXML
perl-LWP-Protocol-https
perl-version
perl-Net-DNS
perl-Sys-Virt
perl-YAML
perl-autodie
perl-Env
fence-agents
minicom
%end

%post --nochroot
$SNIPPET('log_ks_post_nochroot')
%end

%post
$SNIPPET('log_ks_post')
mkdir /root/mlnx
curl "http://$server/prvsn-files/mlnx-en-4.1-1.0.2.0-rhel7.3-x86_64.tgz" -o /root/mlnx/mlnx-en-4.1-1.0.2.0-rhel7.3-x86_64.tgz
curl "http://$server/prvsn-files/firstboot.sh" -o /root/firstboot.sh
curl "http://$server/prvsn-files/70-persistent-net.rules" -o /etc/udev/rules.d/70-persistent-net.rules
curl "http://$server/prvsn-files/ipmitool-1.8.18.tar.bz2" -o /root/ipmitool/ipmitool-1.8.18.tar.bz2
curl "http://$server/prvsn-files/hosts" -o /etc/hosts
#cat /root/firstboot.sh | sed 's/INSERT_MGT0_ADDRESS_HERE/9\.0\.224\.23/g' > /tmp/fb.tmp; cp /tmp/fb.tmp /root/firstboot.sh
#cat /root/firstboot.sh | sed 's/INSERT_FBOND_ADDRESS_HERE/9\.0\.225\.18/g' > /tmp/fb.tmp; cp /tmp/fb.tmp /root/firstboot.sh
echo "@reboot root /bin/bash /root/firstboot.sh" >> /etc/crontab
/sbin/getenforce

#########################################################################
# Start of stuff from provisioning server document.
#########################################################################

#
# Disable IPv6
#
echo "net.ipv6.conf.all.disable_ipv6 = 1" >> /etc/sysctl.conf
echo "net.ipv6.conf.default.disable_ipv6 = 1" >> /etc/sysctl.conf
sysctl -p

#
# Disable NetworkManager, SELinux & the firewall
# (selinux & firewall disabled above)
#
systemctl disable NetworkManager
#systemctl disable firewalld

#
# Enable root login via SSH
#
cat /etc/ssh/sshd_config | sed 's/\#PermitRootLogin/PermitRootLogin/g' > /tmp/sshd_config
/bin/cp /tmp/sshd_config /etc/ssh/sshd_config

#
# Enable xinetd
#
cat /etc/xinetd.d/tftp | sed 's/disable[ \t]*\= yes/disable\t\t\t= no/g' > /tmp/tftp
/bin/cp /tmp/tftp /etc/xinetd.d/tftp

#
# Change permissions for tftpboot
#
chmod -R 0775 /var/lib/tftpboot

#
# Minicom for fsp
#
cat <<EOF > /etc/minirc.fsp
pu port             /dev/ttyS0
pu baudrate         115200
pu bits             8
pu parity           N
pu stopbits         1
pu rtscts           No
EOF

#########################################################################
# End of stuff from provisioning server document.
#########################################################################

# Start yum configuration
$yum_config_stanza
# End yum configuration
$SNIPPET('post_install_kernel_options')
$SNIPPET('post_install_network_config')
$SNIPPET('func_register_if_enabled')
$SNIPPET('download_config_files')
$SNIPPET('koan_environment')
$SNIPPET('redhat_register')
$SNIPPET('cobbler_register')
# Enable post-install boot notification
$SNIPPET('post_anamon')
# Start final steps
$SNIPPET('kickstart_done')
# End final steps
%end
