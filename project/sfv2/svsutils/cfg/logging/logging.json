{
    "version": 1,
    "log_name_default" : "pfs_TIMESTAMP.log",
    "log_path"         : "/var/log/appliance/platform/services",
    "debug_log_path"   : "/var/log/appliance/platform/services",
    "debug_is_enabled" : 0,
    "backup_log_cnt"   : 20,
    "log_size"         : 10485760,
    "log_level"        : "DEBUG",
    "formatters":
    {
	"simple":
	{
            "format": "format=%(asctime)s - %(name)s - %(levelname)s - %(message)s"
	},
	"brief":
	{
            "format": "%(levelname)-8s: %(name)-15s: %(message)s"
	},
	"precise":
	{
            "format": "%(asctime)s %(name)-15s %(levelname)-8s %(message)s"
	},
	"pfs":
	{
	    "format": "[%(asctime)s] %(levelname)-8.8s %(src_func)-20.20s: %(message)s"
	},
	"svsutils":
	{
            "format": "%(filename)s:%(lineno)s %(asctime)s - %(name)-15s - %(levelname)-8s - %(message)s"
	},
	"msg_only":
	{
            "format": "%(message)s"
	}
    },
    "handlers":
    {
	"console":
	{
            "class": "logging.StreamHandler",
            "level": "CRITICAL",
            "formatter": "brief",
            "stream": "ext://sys.stdout"
	}, 
	"file":
	{
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "pfs",
            "filename": "tbd.log",
            "maxBytes": 1000000,
            "backupCount": 3
	},
	"debug":
	{
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "pfs",
            "filename": "tbd.log",
            "maxBytes": 1000000,
            "backupCount": 3
	},
	"report":
	{
            "class": "logging.NullHandler"
	}
    },
    "loggers":
    {
	"pfs":
	{
            "handlers": ["console","file","debug"],
            "propagate": "no",
            "level": "DEBUG"
	},
	"main":
	{
            "handlers": ["console","file","debug"],
            "propagate": "no",
            "level": "DEBUG"
	},
	"report":
	{
            "handlers": ["report"],
            "propagate": "no",
            "level": "DEBUG"
	},
	"root":
	{
            "handlers": ["console", "file","debug"],
            "propagate": "no"
	}
    }
}
