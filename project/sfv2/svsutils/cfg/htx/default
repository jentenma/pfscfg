DEFAULT pfsimg
PROMPT 0
MENU TITLE Cobbler | http://cobbler.github.io/
TIMEOUT 3
TOTALTIMEOUT 6
ONTIMEOUT pfsimg

LABEL local
        MENU LABEL (local)
        MENU DEFAULT
        LOCALBOOT -1

LABEL pfsimg
        kernel /images/pfsimg/bzImage
        MENU LABEL pfsimg
        append initrd=/images/pfsimg/initramfs_data.cpio.xz ksdevice=bootif lang=  pclient=bmcinfo console=tty0 console=tty1 console=ttyS0,115200 text hostname=bmcinfo svrtype=r610 serverip=9.0.224.2 mtm=1234-RC3 nfshost=9.0.224.2 svrcfg=clap3 nfsmd=/opt/ibm/pfs/export root=/dev/rd/o kssendmac  ks=http://9.0.224.2/cblr/svc/op/ks/profile/pfsimg
        ipappend 2


MENU end
